<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:contentPadding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_organization_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FF69B4"
            android:layout_marginBottom="4dp"
            android:text="Nome da Organização"/>

        <TextView
            android:id="@+id/tv_organization_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginBottom="8dp"
            android:text="Descrição breve sobre a organização e seus serviços."/>

        <TextView
            android:id="@+id/tv_organization_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#777777"
            android:drawableStart="@drawable/ic_location"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp"
            android:text="Endereço da organização"/>

        <TextView
            android:id="@+id/tv_organization_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#777777"
            android:drawableStart="@drawable/ic_phone_pink"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:autoLink="phone"
            android:linksClickable="true"
            android:layout_marginBottom="4dp"
            android:text="(XX) XXXX-XXXX"/>

        <TextView
            android:id="@+id/tv_organization_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#777777"
            android:drawableStart="@drawable/ic_web"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:autoLink="web"
            android:linksClickable="true"
            android:text="www.organizacao.com.br"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>