<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_background_art"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_women_art"
        android:alpha="0.6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CCE0F5"
        android:alpha="0.7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bem-vinda ao Voz Delas"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#FF69B4"
        android:gravity="center"
        android:padding="16dp"
        android:background="#80FFFFFF"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_emergency_contacts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="32dp" /> <Button
    android:id="@+id/btn_emergency_contacts"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="64dp"
    android:layout_marginEnd="64dp"
    android:backgroundTint="#FF69B4"
    android:text="Gerenciar Contatos de Emergência"
    android:textColor="@android:color/white"
    android:textSize="16sp"
    android:padding="12dp"
    app:cornerRadius="24dp"
    app:layout_constraintBottom_toTopOf="@+id/btn_legal_info"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tv_welcome_message"
    app:layout_constraintVertical_chainStyle="packed"
    android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_legal_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:backgroundTint="#FF69B4"
        android:text="Informações Legais"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:padding="12dp"
        app:cornerRadius="24dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_anonymous_report"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_emergency_contacts"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_anonymous_report"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:backgroundTint="#FF69B4"
        android:text="Canal de Denúncias Anônimas"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:padding="12dp"
        app:cornerRadius="24dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_support_network"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_legal_info"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_support_network"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:backgroundTint="#FF69B4"
        android:text="Rede de Apoio com Profissionais"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:padding="12dp"
        app:cornerRadius="24dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_anonymous_report"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:backgroundTint="#FF69B4"
        android:text="Sair"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:padding="12dp"
        app:cornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_support_network"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_emergency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/ic_warning_red"
        app:backgroundTint="#FF0000"
        app:tint="@android:color/white"
        app:borderWidth="0dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>